{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "redirects": [
    { "source": "/admin", "destination": "/api/protected-admin.js", "permanent": false },
    { "source": "/", "destination": "/public/index.html", "permanent": false }
  ]
}
